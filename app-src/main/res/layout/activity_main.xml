<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="michael.example.com.barcodereader.MainActivity">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imagesodipetlogo" />
    <Button android:id="@+id/scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="@string/scan"
        android:layout_below="@+id/imageLogo" />
    <CheckBox android:id="@+id/save_to_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text = "Save results to file"
        android:layout_below="@id/scan_button" />
    <Button android:id="@+id/show_file_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:text="Show file contents"
        android:layout_below="@+id/save_to_file" />
    <Button android:id="@+id/clear_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:text="Clear file contents"
        android:layout_below="@+id/show_file_contents" />
    <TextView
        android:id="@+id/scan_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@id/clear_file" />
    <TextView
        android:id="@+id/scan_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@id/scan_format" />
    <TextView
        android:id="@+id/scan_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:textColor="#990000"
        android:layout_below="@id/scan_content" />
    <TextView
        android:id="@+id/scan_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@id/scan_message" />
    <TextView
        android:id="@+id/scan_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@id/scan_userid" />
    <TextView
        android:id="@+id/scan_datestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@id/scan_username" />

</RelativeLayout>
